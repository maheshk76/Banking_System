@model WDDN_V2.Models.RegisterViewModel
@using Microsoft.AspNet.Identity

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if (Request.IsAuthenticated && User.Identity.GetUserName() == "bankingsys12@gmail.com")
    {
        @Html.AntiForgeryToken()
        <h2>Create a new account.</h2>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <p>Personal Information</p>
        <div class="form-group">
            @Html.LabelFor(m => m.AccountType, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.AccountType, new List<SelectListItem>
       {
            new SelectListItem { Text = "Savings", Value = "Savings", Selected=true},
            new SelectListItem { Text = "Current", Value = "Current"},
            new SelectListItem { Text = " Fixed Deposit Account.", Value = "Fixed Deposit"},

       }, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Guardian_Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Guardian_Name, new { @class = "form-control" })
            </div>
        </div>
        <h6 class="text-danger">Name should be as per order :[Firstname  Middlename  Lastname]</h6>
        <div class="form-group">
            @Html.LabelFor(m => m.Date_of_birth, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Date_of_birth, new { @class = "form-control", type = "date",max = DateTime.Now.ToString("yyyy-MM-dd") })
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Mobile_Number, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Mobile_Number, new { @class = "form-control", type = "number" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <p>Address Information</p>
        <div class="form-group">
            @Html.LabelFor(m => m.Address, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.City, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.State, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.State, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Pincode, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Country, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <p>Attachments</p>
        <div class="form-group">
            @Html.LabelFor(m => m.Aadhaar_Proof, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Aadhaar_Proof, new { @class = "form-control", @type = "file" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address_Proof, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address_Proof, new { @class = "form-control", @type = "file" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-info" value="Submit" />
            </div>
        </div>
        <hr />
        <p>>> All the fields are mandotary</p>
        <p>>> After submitting Accountnumber and Username will be genarated for the user.</p>
    }
    else
    {
        <hr />

        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Warnnig!</h4>
            <h2>You Are Not Authorized to use this service.</h2>
            <hr />

        </div>
        <hr />

    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
