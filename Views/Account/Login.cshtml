@using WDDN_V2.Models
@using Microsoft.AspNet.Identity
@model LoginViewModel
@{
    ViewBag.Title = "Log in to eBank";

}
@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    if (!(Request.IsAuthenticated))
    {

        <div class="row">
            <div class="col-md-8">
                <section id="loginForm">
                    @Html.AntiForgeryToken()
                    <h2>@ViewBag.Title.</h2>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-info" />
                        </div>
                    </div>
                    <p>
                        @Html.ActionLink("Forgot your password ?", "ForgotPassword")&emsp;|&emsp;
                        @Html.ActionLink("Activate your account", "ActivateAccount", "Activeaccount")&emsp;|&emsp;
                        @Html.ActionLink("Lock your account", "LockAccount", "Account")
                    </p>
                </section>
               
            </div>
            
            <div class="col-md-8">
                <hr />
                <p>>> Email and Password are case sensitive</p>
                <p>>> Our bank will never ask this information</p>
                <p>>> Your username and password are highly confidential</p>

                <p>>> In case of risky moments you can lock your account</p>
            </div>
        </div>
        <marquee behavior="scroll" direction="left"
                 class="text-danger alert-danger">
            Never share your username and password to anyone.For more help go to contact section
        </marquee>
    }
    else
    {
        <hr />
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Info</h4>
            <h2>You are already logged in.</h2>
            <hr />
        </div>
        <hr />
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}